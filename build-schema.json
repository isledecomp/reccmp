{
  "$defs": {
    "BuildFileTarget": {
      "description": "Target schema for build.yml",
      "properties": {
        "path": {
          "description": "Path to the recompiled executable file, relative to the project path",
          "format": "path",
          "title": "Path",
          "type": "string"
        },
        "pdb": {
          "description": "Path to the PDB file, relative to the project path",
          "format": "path",
          "title": "Pdb",
          "type": "string"
        }
      },
      "required": [
        "path",
        "pdb"
      ],
      "title": "BuildFileTarget",
      "type": "object"
    }
  },
  "description": "File schema for build.yml",
  "properties": {
    "project": {
      "description": "Path of the project directory",
      "format": "path",
      "title": "Project",
      "type": "string"
    },
    "targets": {
      "additionalProperties": {
        "$ref": "#/$defs/BuildFileTarget"
      },
      "description": "List of targets",
      "title": "Targets",
      "type": "object"
    }
  },
  "required": [
    "project",
    "targets"
  ],
  "title": "BuildFile",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#"
}