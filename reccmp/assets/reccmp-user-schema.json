{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "reccmp user",
    "description": "reccmp user file",
    "type": "object",
    "properties": {
        "targets": {
            "description": "List of targets",
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$defs/target",
                    "description": "Singular target"
                }
            },
            "additionalProperties": false
        }
    },
    "$defs": {
        "target": {
            "type": "object",
            "properties": {
                "path": {
                    "description": "Path to the original executable file",
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "targets"
    ]
}
